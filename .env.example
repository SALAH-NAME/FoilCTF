
# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_NAME=foil_ctf
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=changeme_admin_password
PGDATA=/var/lib/postgresql/data/pgdata

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=changeme-use-strong-random-secret-here

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:80

# Sandbox Service
SANDBOX_SERVICE_PORT=8080
SANDBOX_IMAGES_DIR=/data/images
PODMAN_SOCKET=/run/podman/podman.sock

# Scoreboard Service
SCOREBOARD_SERVICE_NAME=scoreboard
SCOREBOARD_SERVICE_PORT=3005

# Notification Service
NOTIFICATION_SERVICE_NAME=notification
NOTIFICATION_SERVICE_PORT=3004

# Chat Service
CHAT_SERVICE_NAME=chat
CHAT_SERVICE_PORT=3003

# Challenge Service
CHALLENGE_SERVICE_NAME=challenge
CHALLENGE_SERVICE_PORT=3002

# User Service
USER_SERVICE_NAME=user
USER_SERVICE_PORT=3001

# Gateway Service
GATEWAY_SERVICE_NAME=gateway
GATEWAY_PORT=3000

# Nginx Service
NGINX_HTTPS_PORT=443
NGINX_HTTP_PORT=80

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
