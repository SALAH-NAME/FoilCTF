{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

		"strict": true,

		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rewriteRelativeImportExtensions": true,

		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
